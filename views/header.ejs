
<script src="/javascripts/cookie.js"></script>

<script>
    $(document).ready(() => {
        var cookie = JSON.parse(getCookie().val);
        if(cookie.token != null) {
            $('#login').hide();
            $('#menu').append(
                '<a id="uid" class="nav-item nav-link active" href="/login">' + cookie.nickname + '</a>'
            )
        }
    });
</script>

<nav class='navbar navbar-expand-sm navbar-dark bg-dark fixed-top'>
    <a class='navbar-brand' href='/'>Login Sample</a>
    
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div id='menu' class="navbar-nav ml-auto">
            <a id='login' class="nav-item nav-link active" href="/login">Login <span class="sr-only">(current)</span></a>
        </div> 
    </div>
</nav>