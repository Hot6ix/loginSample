<script>
    $(document).ready(() => {
        var cookie = cookieToObject();
        if(cookie.token != null) {
            $('#login').hide();
        }

        function cookieToObject() {
        var cookie = document.cookie.split(';');
        var result = {};

        for(var i=0; i<cookie.length; i++) {
            var key = cookie[i].split('=')[0];
            var value = cookie[i].split('=')[1];
            
            result[key] = value;
        }

        return result;
        }
    });
</script>

